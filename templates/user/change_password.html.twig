{% extends 'base.html.twig' %}

{% block title %}
    Change password
{% endblock %}

{% block body %}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Change Password</h4>
            {{ form_start(form, {attr: {novalidate: 'novalidate', 'class':'forms-sample'}}) }}
            <div class="has-error">
                {{ form_errors(form) }}
            </div>
            <div class="form-group">
                <label for="exampleInputUsername1" class="col-sm-3 col-form-label">Current Password</label>
                <div class="col-sm-9">
                    {{ form_widget(form.password) }}
                    <div class="has-error">{{ form_errors(form.password) }}</div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputUsername2" class="col-sm-3 col-form-label">New Password</label>
                <div class="col-sm-9">
                    {{ form_widget(form.rawPassword.first) }}
                    <div class="has-error">{{ form_errors(form.rawPassword.first) }}</div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputUsername3" class="col-sm-3 col-form-label">Confirm New Password</label>
                <div class="col-sm-9">
                    {{ form_widget(form.rawPassword.second) }}
                    <div class="has-error">{{ form_errors(form.rawPassword.second) }}</div>
                </div>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Save</button>
            <a href="{{ path('guests_list') }}" class="btn btn-light">Cancel</a>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}