<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Guestbook</title>
    <link rel="shortcut icon" href="../../assets/assets/public/assets/images/favicon.ico" />
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo">
                            <img src="{{ asset('build/images/logo.svg') }}" alt="logo" />
                        </div>
                        <h4>Recover Password</h4>
                        <h6 class="font-weight-light">Enter your Email and instructions will be sent to you!</h6>
                        <form action="{{ path('forgot_password') }}" method="post" class="pt-3" novalidate>
                            <div class="form-group">
                                <input class="email-field form-control form-control-lg" type="email" name="email"
                                       required="" placeholder="Enter email">
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Reset</button>
                                <a href="{{ path('app_login') }}" class="btn btn-light">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
</body>
</html>