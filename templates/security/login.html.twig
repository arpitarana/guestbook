<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Guestbook</title>
    <link rel="shortcut icon" href="../../assets/assets/public/assets/images/favicon.ico" />
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo">
                            <img src="{{ asset('build/images/logo.svg') }}" alt="logo" />
                        </div>
                        <h4>Hello! let's get started</h4>
                        <h6 class="font-weight-light">Sign in to continue.</h6>
                        <form action="{{ path('app_login') }}" method="post" class="pt-3" id="loginform" novalidate>
                            {% if error %}
                                <div class="has-error">{{ error.messageKey }}</div>
                            {% endif %}
                            <div class="form-group">
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                                       class="form-control form-control-lg" placeholder="Username" aria-label="Username"
                                       aria-describedby="basic-addon1" required autofocus>
{#                                <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">#}
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" id="inputPassword"
                                       class="form-control form-control-lg" placeholder="Password" aria-label="Password"
                                       aria-describedby="basic-addon1" required>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
{#                                <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">#}
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light"> Don't have an account? <a href="{{ path('user_register') }}" class="text-primary">Create</a>
                            <div class="text-center mt-4 font-weight-light"> Forgot password? <a href="{{ path('forgot_password') }}" class="text-primary">Click here</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
</body>
</html>