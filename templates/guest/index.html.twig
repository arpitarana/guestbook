{% extends 'base.html.twig' %}

{% block title %}
    Guest data
{% endblock %}

{% block body %}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body" style="padding-bottom: 10px;padding-top: 30px;">
            {{ form_start(form, {attr: {novalidate: 'novalidate', 'class':'forms-sample'}}) }}
                <div class="row">
                    <div class="col-sm-5">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Guest name</label>
                            <div class="col-sm-7">
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Select status</label>
                            <div class="col-sm-7">
                                {{ form_widget(form.status) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-gradient-info btn-rounded btn-fw" style="float: right">Search</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Guest Lists
                <a href="{{ path('guest_entry') }}" class="btn btn-gradient-primary btn-rounded btn-fw" style="float: right;">Add</a>
            </h4>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th> Guest name </th>
                    <th> Detail </th>
                    <th> Status </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for guestDetail in guestData %}
                    <tr>
                        <td> {{ guestDetail.name}} </td>
                        <td>
                            {% if guestDetail.type == 'text' %}
                                {% if guestDetail.information|length > 50 %}

                                        {{ guestDetail.information|slice(0, 50) }}
                                    <a href="{{ path('guest_view', {'id':guestDetail.id}) }}">
                                        read more ...
                                    </a>
                                {% else %}
                                    {{ guestDetail.information }}
                                {% endif %}
                            {% else %}
                                <a href="{{ path('guest_view', {'id':guestDetail.id}) }}"><img src="{{ asset('uploads/image/' ~ guestDetail.image) }}" alt="img"/></a>
                            {% endif %}
                        </td>
                        <td>
                            {% if guestDetail.status == 1 %}
                                {% set approvedStatus = 'Approved' %}
                                <label class="badge badge-success">Approved</label>
                            {% elseif guestDetail.status == -1 %}
                                {% set approvedStatus = 'Disapproved' %}
                                <label class="badge badge-danger">Disapproved</label>
                            {% else %}
                                <label class="badge badge-warning">Pending</label>
                            {% endif %}
                        </td>

                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">Action</button>
                                <div class="dropdown-menu">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('guest_edit', {'id':guestDetail.id}) }}"  class="dropdown-item">Edit</a>
                                        <a href="{{ path('guest_remove', {'id':guestDetail.id}) }}"  class="dropdown-item" onclick="return confirm('Are you sure want to delete?');">Delete</a>
                                        <a href="{{ path('guest_view', {'id':guestDetail.id}) }}"  class="dropdown-item">View</a>
                                        {% if guestDetail.status == 1 %}
                                            <a href="{{ path('guest_disapprove', {'id':guestDetail.id}) }}" class="dropdown-item" onclick="return confirm('Are you sure want to disapprove?');">Disapprove</a>
                                        {% else %}
                                            <a href="{{ path('guest_approve', {'id':guestDetail.id}) }}" class="dropdown-item" onclick="return confirm('Are you sure want to approve?');">Approve</a>
                                        {% endif %}
                                    {% else %}
                                        <a href="{{ path('guest_edit', {'id':guestDetail.id}) }}"  class="dropdown-item">Edit</a>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">
                            No record found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <br>
            <div class="navigation">
                {{ knp_pagination_render(guestData, null, [], {"objectsName":"Guestdata"}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('guest-detail') }}
{% endblock %}